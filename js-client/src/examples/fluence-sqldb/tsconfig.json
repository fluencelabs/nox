  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "es2015",
    "moduleResolution": "node",
    "baseUrl": "." // This must be specified if "paths" is.
  },
  "exclude": [
    "./node_modules",
    "dist",
    "bundle"
  ]
}
