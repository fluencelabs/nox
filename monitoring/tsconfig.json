{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "types": ["node"],
    "module": "commonjs",
    "baseUrl": "." // This must be specified if "paths" is.
  },
  "typeRoots": [
    "./node_modules/@types",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/test",
    "bundle"
  ]
}
