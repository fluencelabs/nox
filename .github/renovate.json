{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["cargo"],
  "packageRules": [
    {
      "matchLanguages": ["rust"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major Rust dependencies"
    },
    {
      "matchPackagePatterns": ["^libp2p.*"],
      "groupName": "libp2p"
    }
  ]
}
