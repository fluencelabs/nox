#!/bin/bash
#
# Compiles provided Rust project to jar by Asmble.

readonly PROJECT_PATH="$1"
readonly OUTPUT_DIR="$2"

prefix='<compile_rust_to_wasm>'

err() {
  echo "${prefix}: $@" >&2
}

if [ ! -d "${PROJECT_PATH}" ]; then
  err "${PROJECT_PATH} folder doesn't exist"
  exit 1;
fi

printf "${prefix}: Compiling Rust to Wasm\n"

docker run --rm -w /work -v "${PROJECT_PATH}:/work" tomaka/rustc-emscripten \
    cargo +nightly build --target wasm32-unknown-unknown --release

if [ $? -ne 0 ]; then
   err "compiling from rust to wasm failed"
   exit 1;
fi

printf "${prefix}: Build from WASM code executable WasmVM jar\n"

sbt "vm-llamadb"/assembly
