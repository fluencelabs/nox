{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "./types"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/__mocks__/*.ts",
    "node_modules",
    "dist",
    "bundle"
  ],
  "typeRoots" : [
    "./node_modules/@types",
    "./types"
  ]
}
