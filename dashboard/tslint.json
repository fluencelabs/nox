{
  "extends": ["tslint-config-unional", "tslint-react"],
  "rules": {
    "class-name": true,
    "no-unnecessary-type-assertion": true,
    "array-type": [true, "array"],
    "ban-types": [true,
      ["Object", "Use object instead."],
      ["String", "Did you mean string?"],
      ["Function", "Do not use Function. Describe function signature instead."]
    ],
    "import-spacing": true,
    "jsdoc-format": true,
    "newline-before-return": true,
    "interface-name": [true, "never-prefix"],
    "comment-format": [true, "check-uppercase", {"ignore-words": ["TODO"]}],
    "no-empty-interface": true,
    "encoding": true,
    "no-magic-numbers": true,
    "no-consecutive-blank-lines": [true, 1],
    "no-unnecessary-qualifier": true,
    "no-trailing-whitespace": true,
    "no-irregular-whitespace": true,
    "no-internal-module": true,
    "type-literal-delimiter": true,
    "no-redundant-jsdoc": true,
    "number-literal-format": true,
    "no-non-null-assertion": true,
    "no-parameter-reassignment": true,
    "no-var-requires": true,
    "prefer-for-of": true,
    "promise-function-async": true,
    "typedef": [true,
      "call-signature",
      "parameter",
      "arrow-call-signature",
      "member-variable-declaration"
    ],
    "no-bitwise": true,
    "unified-signatures": true,
    "ban-comma-operator": true,
    "await-promise": [true, "Bluebird"],
    "no-conditional-assignment": true,
    "no-debugger": true,
    "no-string-throw": true,
    "no-inferred-empty-object-type": false,
    "no-unsafe-finally": true,
    "no-return-await": true,
    "no-for-in-array": true,
    "use-isnan": true,
    "deprecation": true,
    "eofline": true,
    "indent": [true, "spaces", 2],
    "trailing-comma": true,
    "max-line-length": [true, 140],
    "prefer-const": true,
    "arrow-return-shorthand": true,
    "no-duplicate-imports": true,"arrow-parens": [true, "ban-single-arg-parens"],
    "align": [true, "parameters", "statements", "members", "elements"],
    "linebreak-style": [true, "LF"],
    "max-classes-per-file": [false],
    "no-var-keyword": true,
    "cyclomatic-complexity": [true, 20],
    "triple-equals": true,
    "no-this-assignment": true,
    "restrict-plus-operands": true,
    "prefer-object-spread": true,
    "prefer-conditional-expression": true,
    "no-use-before-declare": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-string-literal": true,
    "no-duplicate-super": true,
    "no-object-literal-type-assertion": true,
    "no-shadowed-variable": true,
    "no-invalid-template-strings": true,
    "no-empty": true,
    "no-duplicate-switch-case": true,
    "no-console": [true, "log", "error"],
    "prefer-switch": [true, {"min-cases": 2}],
    "object-literal-sort-keys": false,
    "semicolon": [true, "always"],
    "switch-final-break": true,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "whitespace": [true,
      "check-branch",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ],
    "quotemark": [true, "single", "jsx-double"],
    "prefer-template": true,
    "forin": true,
    "curly": true,
    "one-line": [true, "check-catch", "check-finally", "check-else"],
    "object-literal-key-quotes": [true, "as-needed"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "private-static-field",
          "private-instance-field",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "no-implicit-dependencies": [true, "dev"],
    "import-blacklist": [true, "@material-ui/icons"],
    "no-floating-promises": false
  }
}
